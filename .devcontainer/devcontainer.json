{
  "name": "School of Solana (Ackee)",
  "image": "ackeeblockchain/school-of-solana-arm:latest",
  "workspaceFolder": "/workspace",
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind"
  ],
  "forwardPorts": [8899, 9900, 8000, 8080],
  "runArgs": [
    "-p","8899:8899",
    "-p","9900:9900",
    "-p","8000:8000",
    "-p","8080:8080"
  ],
  "remoteUser": "root",
  "postCreateCommand": "solana --version && anchor --version && rustc --version"
}
